extends ./include/layout
include ./include/mixin
block own_style
    link(rel = 'stylesheet', href = 'css/project.css')
    script(src = './js/Project.min.js')
block content
    +scroll
    main.por.sprite-24
        .kv.kv-sprite-24
        .device.phone.wow.fadeInUp(style={opacity:0})
            +png('sprite-24')
        section.introBox
            .left.wow.fadeInUp(style={opacity:0})
                h3 
                    span.break Cool 玩瓶
                    span.break 沁涼絕殺 24 秒
                a(href="http://cell.webgene.com.tw/technic/project/2017coolgame24s/mobile/index.html" target='_blank') 
                    span VIEW WEBSITE
                    span.arrow
            .right
                .intro.wow.fadeInUp(style={opacity:0})
                    h4 Description
                    p 
                        span.break This case is only available for mobile phones. It is a two-person mobile interactive shooting game. Winners can participate in a real life basketball shoot-out competition.
                        span.break It used the street graffiti of Cool cans. Before the game starts there are dynamic description so that users can easily get started. 
                        span.break If you're an introvert, don't worry! There is a one player mode.
                .intro.wow.fadeInUp(style={opacity:0})
                    h4 Information
                    ul
                        li
                            span Project
                            span Cool 玩瓶 沁涼絕殺 24 秒
                        li
                            span Client
                            span Sprite
                        li
                            span Year
                            span 2017
                        li
                            span Role
                            span 
                                span.break Web Design, UI Design,
                                span.break PSD to Html
        .mockup.wow.fadeInUp(style={opacity:0})
            +jpg('sprite-24_layout')
        section.identity
            +sub-tt('identity')
            main
                .left.wow.fadeInUp(style={opacity:0})
                    .info
                        h4 typography
                        ul.typo
                            li.sprite-typo
                              +svg('sprite_typo')  
                            li.notoSans
                                p.gray-l Text
                                p Noto Sans CJK TC Regular
                                p.font-m Noto Sans CJK TC Medium
                                p.font-b Noto Sans CJK TC Bold
                .right.wow.fadeInUp(style={opacity:0})
                    .info
                        h4 color
                        ul.color.sprite-color
                            li
                                .cir.cir1
                                p #009d42
                            li
                                .cir.cir2
                                p #ffe100
                            li
                                .cir.cir3
                                p #fff
        section.layout
            +sub-tt('layout')
            .box
                .page.page1.wow.fadeInUp(style={opacity:0})
                    +png('sprite-24_layout2')
                .page.page2.wow.fadeInUp(style={opacity:0})
                    +png('sprite-24_layout3')
                .page.page3.wow.fadeInUp(style={opacity:0})
                    +png('sprite-24_layout4')
                .page.page4.wow.fadeInUp(style={opacity:0})
                    +png('sprite-24_layout5')
        +switchBox('sprite-cool','tiger')