extends ./include/layout
include ./include/mixin
block own_style
    link(rel = 'stylesheet', href = 'css/project.css')
    script(src = './js/Project.min.js')
block content
    +scroll
    main.por.house
        .kv.kv-house
        .device.mac.wow.fadeInUp(style={opacity:0})
            +png('house')
        section.introBox
            .left.wow.fadeInUp(style={opacity:0})
                h3 
                    span.break 閱狷聲
                    span.break Display Board
                a(href="http://bighouse.webgene.com.tw/" target='_blank') 
                    span VIEW WEBSITE
                    span.arrow
            .right.wow.fadeInUp(style={opacity:0})
                .intro
                    h4 Description
                    p 
                        span.break Have good life and live life well. This is the display board of the new construction project of Chan Chun Development.
                        span.break It's only available for 1920' full screen. In order to make it easier and more comfortable to browse, my mission was to create a suitable environment for the site.
                .intro
                    h4 Information
                    ul
                        li
                            span Project
                            span 閱狷聲
                        li
                            span Client
                            span Chan Chun Development
                        li
                            span Year
                            span 2018
                        li
                            span Role
                            span 
                                span.break 1920 HD Web Design, UI Design,
                                span.break PSD to Html
        .mockup.wow.fadeInUp(style={opacity:0})
            +jpg('house-layout')
        section.identity
            +sub-tt('identity')
            main
                .left.wow.fadeInUp(style={opacity:0})
                    .info
                        h4 typography
                        ul.typo
                            li.notoSans
                                p Noto Sans CJK TC Regular
                                p.font-m Noto Sans CJK TC Medium
                                p.font-b Noto Sans CJK TC Bold
                .right.wow.fadeInUp(style={opacity:0})
                    .info
                        h4 color
                        ul.color.kids-color
                            li
                                .cir.cir1
                                p #000000
                            li
                                .cir.cir2
                                p #6f6f6f
                            li
                                .cir.cir3
                                p #dab896
        .mockup.wow.fadeInUp(style={opacity:0})
            +jpg('house-layout2')
        +switchBox('kids','wildaid')