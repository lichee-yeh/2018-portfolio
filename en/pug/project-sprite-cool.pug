extends ./include/layout
include ./include/mixin
block own_style
    link(rel = 'stylesheet', href = 'css/project.css')
    script(src = './js/Project.min.js')
block content
    +scroll
    main.por.sprite-cool
        .kv.kv-sprite-cool
        .device.mac.wow.fadeInUp(style={opacity:0})
            +png('sprite-cool1')
        section.introBox
            .left.wow.fadeInUp(style={opacity:0})
                h3 
                    span.break Cool 玩瓶 BE YOU 
                    span.break 激發最酷的你
                a(href="https://cell.webgene.com.tw/technic/project/Sprite/aws%E6%AD%A3%E5%BC%8F/2017beyou/index.html" target='_blank') 
                    span VIEW WEBSITE
                    span.arrow
            .right
                .intro.wow.fadeInUp(style={opacity:0})
                    h4 Description
                    p 
                        span.break Sprite and the street artist "KEA" collaborated to launch a new package to communicate the new ideas and concepts of Cool cans.
                        span.break The theme of the website is inspired by the graffiti style of the Cool cans. In addition to communicating cool cans, there is also a small interaction to create special facebook profile pictures on the site, so that users can promote the BE YOU spirit and speak your faith!
                .intro.wow.fadeInUp(style={opacity:0})
                    h4 Information
                    ul
                        li
                            span Project
                            span Cool 玩瓶 BE YOU 激發最酷的你 
                        li
                            span Client
                            span Sprite
                        li
                            span Year
                            span 2017
                        li
                            span Role
                            span 
                                span.break Responsive Web Design, UI Design,
                                span.break PSD to Html
        .mockup.wow.fadeInUp(style={opacity:0})
            +jpg('sprite-cool_layout')
        section.identity
            +sub-tt('identity')
            main
                .left.wow.fadeInUp(style={opacity:0})
                    .info
                        h4 typography
                        ul.typo
                            li.sprite-typo
                              +svg('sprite_typo')  
                            li.notoSans
                                p.gray-l text
                                p Noto Sans CJK TC Regular
                                p.font-m Noto Sans CJK TC Medium
                                p.font-b Noto Sans CJK TC Bold
                .right.wow.fadeInUp(style={opacity:0})
                    .info
                        h4 color
                        ul.color.sprite-color
                            li
                                .cir.cir1
                                p #009d42
                            li
                                .cir.cir2
                                p #ffe100
                            li
                                .cir.cir3
                                p #fff
        section.layout
            +sub-tt('layout')
            .box.pageBox
                .page.page1.wow.fadeInUp(style={opacity:0})
                    +jpg('sprite-cool_layout2')
                .page.page2.wow.fadeInUp(style={opacity:0})
                    +jpg('sprite-cool_layout3')
            .box.wall-g
                .page-g1-outer.wow.fadeInUp(style={opacity:0})
                    .page-g1
                        +png('sprite-cool_layout4')
                .page-g2-outer.wow.fadeInUp(style={opacity:0})
                    .page-g2
                        +png('sprite-cool_layout5')
                .page-g3-outer2.wow.fadeInUp(style={opacity:0})
                    .page-g3-outer.por
                        .page-g3
                            +png('sprite-cool_layout6') 
                    .page-g4.abs
                        +png('sprite-cool_layout6-bg')
        .mockup.wow.fadeInUp(style={opacity:0})
            +jpg('sprite-cool_layout7')
        +switchBox('coke','sprite-24')