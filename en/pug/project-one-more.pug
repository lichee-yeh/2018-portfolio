extends ./include/layout
include ./include/mixin
block own_style
	link(rel = 'stylesheet', href = 'css/project.css')
	script(src = './js/Project.min.js')
block content
	+scroll
	main.por.onemore
		.kv.kv-om
		.device.laptop.wow.fadeInUp(style={opacity:0})
			+png('onemore')
		section.introBox
			.left.wow.fadeInUp(style={opacity:0})
				h3 
					span.break one more trip
					span.break Official Website
				a(href="https://onemoretrip.tw/" target='_blank') 
					span VIEW WEBSITE
					span.arrow
			.right.wow.fadeInUp(style={opacity:0})
				.intro
					h4 Description
					p 
						span.break One More is a platform for travel information that provides users with a way to enjoy Japan, including recommended tourist spots and places. 
				.intro
					h4 Information
					ul
						li
							span Project
							span one more trip Official Website
						li
							span Client
							span one more 玩默國際有限公司
						li
							span Year
							span 2017
						li
							span Role
							span 
								span.break Responsive Web Design, UI Design,
								span.break Brand Identity, PSD to Html
		.mockup.wow.fadeInUp(style={opacity:0})
			+jpg('om_layout')
		section.identity
			+sub-tt('identity')
			main
				.left
					.info.wow.fadeInUp(style={opacity:0})
						h4 logo design
						ul.fir-logo
							li.logo
								+svg('om_logo1')
							li
								p The logo was designed in the shape of the letter "O" and used the shape of waves to create a sense of wandering.
					.info.sec-logo.wow.fadeInUp(style={opacity:0})
						h4 secondary logo
						ul
							li.logo2
								+svg('om_logo2')
							li.logo3
								+svg('om_logo3')
				.right
					.info.wow.fadeInUp(style={opacity:0})
						h4 typography
						ul.typo
							li.notoSerif
								p.gray-l Title
								p Noto Serif CJK TC Regular
								p.font-b Noto Serif CJK TC Bold
							li.notoSans
								p.gray-l Text
								p Noto Sans CJK TC Regular
								p.font-b Noto Sans CJK TC Bold
					.info.wow.fadeInUp(style={opacity:0})
						h4 color
						ul.color
							li
								.cir.cir1
								p #f7a515
							li
								.cir.cir2
								p #363636
							li
								.cir.cir3
								p #000000	
			.logo-demo.wow.fadeInUp(style={opacity:0})
				.pic
					+jpg('om_logo_demo')
				.pic
					+jpg('om_logo_demo2')
		section.layout
			+sub-tt('layout')
			.box.pageBox.wow.fadeInUp(style={opacity:0})
				.page.page2
					+jpg('om_layout3')
				.page.page1
					+jpg('om_layout2')
			.box.wow.fadeInUp(style={opacity:0})
				.rwd.por
					+png('om_layout4')
					p In member area tab bar was fixed at the bottom of the page to easily switching to another tab on the small screen.
			.box.wireframe.wow.fadeInUp(style={opacity:0})
				+sub-tt('wireframe')
				.pic
					+png('om_wireframe')
		.mockup.wow.fadeInUp(style={opacity:0})
			+jpg('om_layout5')
		+switchBox('google','coke')