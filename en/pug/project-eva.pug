extends ./include/layout
include ./include/mixin
block own_style
    link(rel = 'stylesheet', href = 'css/project.css')
    script(src = './js/Project.min.js')
block content
    +scroll
    main.por.eva
        .kv.kv-eva
        .device.mac.wow.fadeInUp(style={opacity:0})
            +png('eva')
        section.introBox
            .left.wow.fadeInUp(style={opacity:0})
                h3 
                    span.break 那些年
                    span.break 我們一起搭的
                         span.break-m 747-400
                a(href="http://747.evaair.com/#/zh" target='_blank') 
                    span VIEW WEBSITE
                    span.arrow
            .right.wow.fadeInUp(style={opacity:0})
                .intro
                    h4 Description
                    p 
                        span.break The Boeing 747-400 of EVA Air officially retired after completing the final flight. We assisted EVA Air to design this website to commemorate the important moment of the Boeing 747 and to share with fans of the Boeing 747-400. 
                        span.break The style of the website is fresh and bright, with sky and clouds. Let's celebrate this wonderful time with a blessing!

                .intro
                    h4 Information
                    ul
                        li
                            span Project
                            span 那些年 我們一起搭的 747-400
                        li
                            span Client
                            span EVA AIR
                        li
                            span Year
                            span 2018
                        li
                            span Role
                            span 
                                span.break Responsive Web Design, UI Design,
                                span.break PSD to Html
        .mockup.wow.fadeInUp(style={opacity:0})
            +jpg('eva_layout')
        section.identity.wow.fadeInUp(style={opacity:0})
            +sub-tt('identity')
            main
                .left
                    .info
                        h4 typography
                        ul.typo
                            li
                                p.gray-l English
                                p Lato Light
                                p.font-m Lato Medium
                                p.font-b Lato Bold
                            li.notoSans
                                p.gray-l Chinese
                                p Noto Sans CJK TC Regular
                                p.font-m Noto Sans CJK TC Medium
                                p.font-b Noto Sans CJK TC Bold
                .right
                    .info
                        h4 color
                        ul.color.kids-color
                            li
                                .cir.cir1
                                p #009944
                            li
                                .cir.cir2
                                p #4a7d6b
                            li
                                .cir.cir3
                                p #ea5406
        section.layout.introBox.wow.fadeInUp(style={opacity:0})
            +sub-tt('layout')
            .box.onePage 
                .page.page1
                    +jpg('eva_layout2')
        +switchBox('tiger','kids')